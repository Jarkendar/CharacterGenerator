<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/margin_default"
    >

    <ImageView
        android:id="@+id/card_image"
        android:layout_width="50dp"
        android:layout_height="46dp"
        app:layout_constraintTop_toTopOf="@id/name"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="@id/strength_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/name"
        android:src="@drawable/golum_native"/>

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="88:88:88  88/88/8888"
        />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:layout_marginStart="@dimen/margin_default"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/card_image"
        android:text="LebolassLebolass"
        />

    <TextView
        android:id="@+id/race"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Istari"
        app:layout_constraintBottom_toBottomOf="@id/name"
        app:layout_constraintStart_toEndOf="@id/name"
        android:layout_marginStart="@dimen/margin_default"
        />

    <ImageView
        android:id="@+id/strength_image"
        android:layout_width="@dimen/card_save_item_image"
        android:layout_height="@dimen/card_save_item_image"
        app:layout_constraintTop_toBottomOf="@id/name"
        android:layout_marginTop="@dimen/margin_default"
        android:src="@drawable/attr_strength_image"
        app:layout_constraintStart_toStartOf="@id/name"
        />

    <TextView
        android:id="@+id/strength_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        app:layout_constraintStart_toEndOf="@id/strength_image"
        android:layout_marginStart="@dimen/margin_default"
        app:layout_constraintTop_toTopOf="@id/strength_image"
        app:layout_constraintBottom_toBottomOf="@id/strength_image"
        />

    <ImageView
        android:id="@+id/wisdom_image"
        android:layout_width="@dimen/card_save_item_image"
        android:layout_height="@dimen/card_save_item_image"
        app:layout_constraintTop_toBottomOf="@id/name"
        android:layout_marginTop="@dimen/margin_default"
        android:layout_marginStart="@dimen/margin_triple"
        android:src="@drawable/attr_wisdom_image"
        app:layout_constraintStart_toEndOf="@id/strength_label"
        />

    <TextView
        android:id="@+id/wisdom_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        app:layout_constraintStart_toEndOf="@id/wisdom_image"
        android:layout_marginStart="@dimen/margin_default"
        app:layout_constraintTop_toTopOf="@id/strength_image"
        app:layout_constraintBottom_toBottomOf="@id/strength_image"
        />

    <ImageView
        android:id="@+id/agility_image"
        android:layout_width="@dimen/card_save_item_image"
        android:layout_height="@dimen/card_save_item_image"
        app:layout_constraintTop_toBottomOf="@id/name"
        android:layout_marginTop="@dimen/margin_default"
        android:layout_marginStart="@dimen/margin_triple"
        android:src="@drawable/attr_agility_image"
        app:layout_constraintStart_toEndOf="@id/wisdom_label"
        />

    <TextView
        android:id="@+id/agility_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        app:layout_constraintStart_toEndOf="@id/agility_image"
        android:layout_marginStart="@dimen/margin_default"
        app:layout_constraintTop_toTopOf="@id/strength_image"
        app:layout_constraintBottom_toBottomOf="@id/strength_image"
        />

    <ImageView
        android:id="@+id/spirit_image"
        android:layout_width="@dimen/card_save_item_image"
        android:layout_height="@dimen/card_save_item_image"
        app:layout_constraintTop_toBottomOf="@id/name"
        android:layout_marginTop="@dimen/margin_default"
        android:layout_marginStart="@dimen/margin_triple"
        android:src="@drawable/attr_spirit_image"
        app:layout_constraintStart_toEndOf="@id/agility_label"
        />

    <TextView
        android:id="@+id/spirit_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        app:layout_constraintStart_toEndOf="@id/spirit_image"
        android:layout_marginStart="@dimen/margin_default"
        app:layout_constraintTop_toTopOf="@id/strength_image"
        app:layout_constraintBottom_toBottomOf="@id/strength_image"
        />

    <ImageView
        android:id="@+id/wit_image"
        android:layout_width="@dimen/card_save_item_image"
        android:layout_height="@dimen/card_save_item_image"
        app:layout_constraintTop_toBottomOf="@id/name"
        android:layout_marginTop="@dimen/margin_default"
        android:layout_marginStart="@dimen/margin_triple"
        android:src="@drawable/attr_wit_image"
        app:layout_constraintStart_toEndOf="@id/spirit_label"
        />

    <TextView
        android:id="@+id/wit_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        app:layout_constraintStart_toEndOf="@id/wit_image"
        android:layout_marginStart="@dimen/margin_default"
        app:layout_constraintTop_toTopOf="@id/strength_image"
        app:layout_constraintBottom_toBottomOf="@id/strength_image"
        />

    <ImageView
        android:id="@+id/inspiration_image"
        android:layout_width="@dimen/card_save_item_image"
        android:layout_height="@dimen/card_save_item_image"
        app:layout_constraintTop_toBottomOf="@id/name"
        android:layout_marginTop="@dimen/margin_default"
        android:layout_marginStart="@dimen/margin_triple"
        android:src="@drawable/limit_inspiration_image"
        app:layout_constraintStart_toEndOf="@id/wit_label"
        />

    <TextView
        android:id="@+id/inspiration_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        app:layout_constraintStart_toEndOf="@id/inspiration_image"
        android:layout_marginStart="@dimen/margin_default"
        app:layout_constraintTop_toTopOf="@id/strength_image"
        app:layout_constraintBottom_toBottomOf="@id/strength_image"
        />
    <ImageView
        android:id="@+id/fear_image"
        android:layout_width="@dimen/card_save_item_image"
        android:layout_height="@dimen/card_save_item_image"
        app:layout_constraintTop_toBottomOf="@id/name"
        android:layout_marginTop="@dimen/margin_default"
        android:layout_marginStart="@dimen/margin_triple"
        android:src="@drawable/limit_fear_image"
        app:layout_constraintStart_toEndOf="@id/inspiration_label"
        />

    <TextView
        android:id="@+id/fear_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        app:layout_constraintStart_toEndOf="@id/fear_image"
        android:layout_marginStart="@dimen/margin_default"
        app:layout_constraintTop_toTopOf="@id/strength_image"
        app:layout_constraintBottom_toBottomOf="@id/strength_image"
        />

    <ImageView
        android:id="@+id/damage_image"
        android:layout_width="@dimen/card_save_item_image"
        android:layout_height="@dimen/card_save_item_image"
        app:layout_constraintTop_toBottomOf="@id/name"
        android:layout_marginTop="@dimen/margin_default"
        android:layout_marginStart="@dimen/margin_triple"
        android:src="@drawable/limit_damage_image"
        app:layout_constraintStart_toEndOf="@id/fear_label"
        />

    <TextView
        android:id="@+id/damage_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        app:layout_constraintStart_toEndOf="@id/damage_image"
        android:layout_marginStart="@dimen/margin_default"
        app:layout_constraintTop_toTopOf="@id/strength_image"
        app:layout_constraintBottom_toBottomOf="@id/strength_image"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/margin_default"
        app:layout_constraintTop_toBottomOf="@id/strength_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="#616161"
        />


</androidx.constraintlayout.widget.ConstraintLayout>